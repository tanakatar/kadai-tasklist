<h1>id: <%= @task.id %> の詳細ページ</h1>
<p>ステータス: <%= @task.status %></p>
<p>内容: <%= @task.content %></p>

<%= link_to "一覧に戻る", tasks_path %>
<%= link_to "編集する", edit_task_path(@task) %>
<% if current_user == @task.user %>
  <%= link_to "このタスクを削除する", @task, method: :delete, data: { confirm: "本当に削除しますか？" } %>
<% end %>