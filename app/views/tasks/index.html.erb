<% if logged_in? %>
  <h1><%= current_user.name %>のタスク一覧</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.status %> &hellip; <%= task.content %></li>
    <% end %>  
  </ul>
  <%= link_to "新規作成", new_task_path %>
<% else %>
  <%= link_to 'ログイン', login_path %>
<% end %>

